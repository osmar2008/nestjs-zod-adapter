{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "graphql-compose": [
        "node_modules/graphql-compose/"
      ]
    },
    "incremental": true,
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../../shared/types"
    }
  ]
}